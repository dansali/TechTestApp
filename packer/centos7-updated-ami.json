{
    "builders": [
      {
        "type": "amazon-ebs",
        "region": "ap-southeast-2",
        "source_ami": "ami-04c87826f51872f21",
        "instance_type": "m4.xlarge",
        "ssh_username": "ec2-user",
        "ami_name": "centos7-updated-{{isotime \"2006-01-02T1504\"}}",
        "encrypt_boot": true,
        "launch_block_device_mappings": [
          {
            "device_name": "/dev/sda1",
            "volume_size": 50,
            "volume_type": "gp2",
            "delete_on_termination": true
          }
        ],
        "tags": {
          "TechTestApp": "Clean-Updated",
          "Amazon_AMI_Management_Identifier": "centos7-updated"
        }
      }
    ],
  
    "provisioners": [
      {
        "type": "shell",
        "inline": [
          "sudo yum -y update",
          "sudo yum -y install centos-release-scl"
        ]
      }
    ],
    "post-processors": [
      {
        "type": "manifest",
        "output": "centos7-updated-output.json"
      },
  
      {
        "type": "amazon-ami-management",
        "regions": ["ap-southeast-2"],
        "identifier": "centos7-updated",
        "keep_releases": "3"
      }
    ]
  }